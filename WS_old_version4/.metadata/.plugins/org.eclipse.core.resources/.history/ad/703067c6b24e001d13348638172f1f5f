module input_handler ();
int fd;
reg[1000:1] str;
string line;

initial begin
	fd = $fopen("read_1410.txt", "r");
	while(!($feof(fd))) begin
		$fgets(line,fd);
		$display("Line : %s", line);
	end

	$fclose(fd);
end
endmodule